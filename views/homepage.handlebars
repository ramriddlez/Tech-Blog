
{{#each posts as |post| }}
<div class="border border-dark border-3">
  <h5 class="homeage-card-header">{{post.user.username}} on {{format_date post.date_created}}</h5>
  <div class="card-body">
    <h5 class="card-title">{{post.title}}</h5>
    <p class="card-text">{{post.content}}</p>
    <a href="/posts/{{post.id}}" class="btn btn-success">Leave a comment!</a>
  </div>
</div><br><br>
{{/each}}

